<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="beforeAdvice" class="com.example.spring.aop.BeforeAdvice"/>
    <bean id="afterAdvice" class="com.example.spring.aop.AfterAdvice"/>
    <bean id="aroundAdvice" class="com.example.spring.aop.AroundAdvice"/>
    <bean id="throwableAdvice" class="com.example.spring.aop.ThrowableAdvice"/>
    <bean id="person" class="com.example.spring.aop.Person"/>


    <bean id="before"
          class="org.springframework.aop.framework.ProxyFactoryBean"
          p:proxyInterfaces="com.example.spring.aop.Worker" p:target-ref="person"
          p:interceptorNames="beforeAdvice"/>

    <bean id="after"
          class="org.springframework.aop.framework.ProxyFactoryBean"
          p:proxyInterfaces="com.example.spring.aop.Worker" p:target-ref="person"
          p:interceptorNames="afterAdvice"/>

    <bean id="around" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:proxyInterfaces="com.example.spring.aop.Worker" p:target-ref="person"
          p:interceptorNames="aroundAdvice"/>


    <bean id="throwable" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:interceptorNames="throwableAdvice"
          p:target-ref="person"
          p:proxyTargetClass="true"/>

</beans>
